html
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js', integrity='sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0', crossorigin='anonymous')
        link(rel='stylesheet', href='/css/mainPage.css')
        <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
        
    body
        header.header-page
            ul.row.align-items-center.p-2.m-0
                li.col-md-5.d-flex.align-items-center.title
                    img(src='/img/grapes.png', width='50', height='50')
                    h4.ms-3 Manage Page
                li.col.search.mt-3
                    form.d-flex(action="/user/search", method="GET")
                        input.form-control.me-2(type='search', placeholder='Search', aria-label='Search', name="search", value=search)
                        button.btn.btn-outline-secondary.btnSubmit(type='submit') Search
                li.col.d-flex.justify-content-between
                    div
                    - var exist = user.name ? true : false;
                    if !exist
                        .dropdown.ms-2.drop-user
                            button#userDropdown.btn.btn-outline-secondary.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false') Guest 
                            ul.dropdown-menu.mr-5.dropdown-menu-end
                                li
                                    a.dropdown-item(href='#') Check-in
                                li
                                    a.dropdown-item(href='#') Offcial site
                                li
                                    a.dropdown-item.border-top(href='/user/create') Sign up
                                li
                                    a.dropdown-item.border-top(href='/auth/login') Log in
                    else
                        .dropdown.ms-2.drop-user
                            button#userDropdown.btn.btn-outline-secondary.dropdown-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false')= user.name
                            ul.dropdown-menu.mr-5.dropdown-menu-end
                                li
                                    a.dropdown-item(href='#') Check-in
                                li
                                    a.dropdown-item(href='#') Account info
                                li
                                    a.dropdown-item(href='#') Offcial site
                                li
                                    a.dropdown-item.border-top(href='/auth/login') Logout

        main.d-flex
            div.user-list.p-0
                a(href='#') Home
                a(href='/user') User
                a(href="/product") Product 
            .table-custom.mt-4
                block content