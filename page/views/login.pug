extends ../layout/authLayout

block auth
    main.container.w-25.mt-5
        h1 Login
        if(error)
            .alert.alert-danger= error
        form.mt-5(action='/auth/login', method='POST')
            .mb-3
                label.form-label(for='user-name') User name
                input.form-control(type='text', name='name', value= values ? values.name : '')
            .mb-3
                label.form-label(for='password') Password
                input.form-control(type='password', name='password', value= values ? values.password : '')
            button.btn.btn-primary(type='submit') Login
