extends ../layout/commonLayout 

block content
    .container.w-50
        h1 Create User
        if error
            .alert.alert-danger= error 
        form(action='/user/create', method='POST' enctype="multipart/form-data") 
            .mb-3
                label.form-label(for='inputName') Name
                input.form-control(type='text', aria-describedby='nameHelp', name='name', value= values ? values.name : '', required)
            .mb-3
                label.form-label(for='inputName') Age
                input.form-control(type='number', aria-describedby='nameHelp', name='age', value= values ? values.age : '', required)
            .mb-3
                label.form-label(for='inputName') Phone
                input.form-control(type='number', aria-describedby='nameHelp', name='phone', value= values ? values.phone : '', required)
            .mb-3
                label.form-label(for='inputPassword') Password
                input.form-control(type='password', name='password', required)
            .mb-3
                label.form-label(for='avatar') Avatar
                input#avatar.form-control(type='file', name='avatar')
            button.btn.btn-primary(type='submit') Create

